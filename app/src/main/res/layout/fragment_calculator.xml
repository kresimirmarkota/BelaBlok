<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                style="@style/score"
                android:text="MI"/>
            <TextView
                style="@style/score"
                android:text="VI"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                style="@style/option"
                android:text="BODOVI"/>
            <TextView
                style="@style/option"
                android:text="ZVANJA"/>
        </LinearLayout>

    <LinearLayout
        style="@style/rowContainer">
        <Button style="@style/buttonNumber"
            android:text="7"/>
        <Button style="@style/buttonNumber"
            android:text="8"/>
        <Button style="@style/buttonNumber"
            android:text="9"/>
    </LinearLayout>
    <LinearLayout
        style="@style/rowContainer">
        <Button style="@style/buttonNumber"
            android:text="4"/>
        <Button style="@style/buttonNumber"
            android:text="5"/>
        <Button style="@style/buttonNumber"
            android:text="6"/>
    </LinearLayout>
    <LinearLayout
        style="@style/rowContainer">
        <Button style="@style/buttonNumber"
            android:text="1"/>
        <Button style="@style/buttonNumber"
            android:text="2"/>
        <Button style="@style/buttonNumber"
            android:text="3"/>
    </LinearLayout>
    <LinearLayout
        style="@style/rowContainer">
        <Button style="@style/buttonNumber"
            android:text="RESET"/>
        <Button style="@style/buttonNumber"
            android:text="0"/>
        <Button style="@style/buttonNumber"
            android:text="<"/>
    </LinearLayout>
</LinearLayout>